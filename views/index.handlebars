<h1>Burgers!</h1>

<h2>Burgers that have not been eaten!</h2>




<ul>
    {{#each burgers}}
    <li>
        <p>
            {{this.id}}. {{this.burger_name}}
        </p>
    </li>
    {{/each}}
</ul>

<h2>Burgers that haven't been eaten</h2>

<ul>
 
  {{#each burgers}}
  {{#unless devoured}}
  {{> burgers/burger-block ate=true}}
  {{!-- <button id="delete-btn">Delete</button> --}}
  {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that have been eaten!</h2>

<ul>
  {{#each burgers}}
  {{!-- <button id="delete-btn">Delete</button> --}}
  {{#if devoured}}
  {{> burgers/burger-block ate=false}}
  {{!-- <button id="delete-btn">Delete</button> --}}
  {{/if}}
  {{/each}}
</ul>





<h2>Add Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burger_name">
